{{> header}}

<div id="dashboard-holder">
    {{#if destinations}}
    {{#each destinations}}
    <div class="card overflow-hidden current-card details" style="width: 22rem; height: 18rem;">
        <div class="card-body">
            <p class="card-text">{{title}}</p>
        </div>
        <img class="card-image" src="{{imageURL}}" alt="Card image cap">
        <a class="btn" href="#/destinations/details/{{ id }}">Details</a>
    </div>
    {{else}}
    {{/each}}

    {{else}}
    <h1>No destinations yet! Be the first one :)</h1>
    {{/if}}
</div>

{{> footer}}
